<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textColor="#024f99"
            android:textSize="6pt"
            android:textStyle="bold"
            android:id="@+id/tvUserName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/idProfileView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idProfileView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textColor="#024f99"
            android:textSize="6pt"
            android:textStyle="bold"
            android:id="@+id/tvLikesCount"
            android:layout_below="@+id/imageView"
            android:layout_toRightOf="@+id/idHeartIcon"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width = "18dp"
            android:layout_height= "18dp"
            android:adjustViewBounds="true"
            android:maxWidth="18dp"
            android:maxHeight="18dp"
            android:scaleType="fitCenter"
            android:id="@+id/idHeartIcon"
            android:drawable="@drawable/heart"
            android:src="@drawable/heart"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textSize="6pt"
            android:id="@+id/tvViewAll"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:autoLink="all" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tvViewAll"
            android:layout_marginLeft="25dp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:id="@+id/lvComments">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvTimeElapsed"
            android:textSize="4pt"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/clock"
            android:layout_alignEnd="@+id/clock"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/clock"
            android:src="@drawable/clock"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</RelativeLayout>